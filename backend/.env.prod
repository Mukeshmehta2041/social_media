# Production environment variables for backend (COPY FROM `.env.prod.example` and update)
# WARNING: Do not commit real secrets to the repository. Replace placeholders before use.

# App
HOST=0.0.0.0
PORT=1337
NODE_ENV=production

# Security keys (generate strong random values)
APP_KEYS=change_me_app_keys
API_TOKEN_SALT=change_me_api_token_salt
ADMIN_JWT_SECRET=change_me_admin_jwt_secret
JWT_SECRET=change_me_jwt_secret

# Database (use Postgres in production)
DATABASE_CLIENT=postgres
DATABASE_HOST=db
DATABASE_PORT=5432
DATABASE_NAME=strapi
DATABASE_USERNAME=strapi
DATABASE_PASSWORD=changeme
DATABASE_SSL=false

# Email (optional for development)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=

# WhatsApp
WHATSAPP_NUMBER=+1234567890
FRONTEND_URL=http://localhost:5173

# Upload
MAX_FILE_SIZE=5242880
UPLOAD_PROVIDER=local
