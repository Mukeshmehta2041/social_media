# Example production environment variables for backend (DO NOT COMMIT SECRETS)
# Copy this to `.env.prod` and fill values before deploying.

# App
HOST=0.0.0.0
PORT=1337
NODE_ENV=production

# Security keys (generate strong random values)
APP_KEYS=replace_with_your_app_keys
API_TOKEN_SALT=replace_with_api_token_salt
ADMIN_JWT_SECRET=replace_with_admin_jwt_secret
JWT_SECRET=replace_with_jwt_secret

# Database (use Postgres in production)
DATABASE_CLIENT=postgres
DATABASE_HOST=db
DATABASE_PORT=5432
DATABASE_NAME=strapi
DATABASE_USERNAME=strapi
DATABASE_PASSWORD=change_me
DATABASE_SSL=false

# Logging
STRAPI_LOG_LEVEL=info

# Other (example)
FRONTEND_URL=https://your-frontend-domain.example
