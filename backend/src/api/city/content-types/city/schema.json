{
  "kind": "collectionType",
  "collectionName": "cities",
  "info": {
    "singularName": "city",
    "pluralName": "cities",
    "displayName": "City",
    "description": "Cities for advertisements"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "state": {
      "type": "string"
    },
    "country": {
      "type": "string",
      "default": "India"
    },
    "latitude": {
      "type": "decimal"
    },
    "longitude": {
      "type": "decimal"
    },
    "isActive": {
      "type": "boolean",
      "default": true
    },
    "advertisements": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::advertisement.advertisement",
      "mappedBy": "city"
    }
  }
}

