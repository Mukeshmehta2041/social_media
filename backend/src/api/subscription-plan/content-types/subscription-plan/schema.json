{
  "kind": "collectionType",
  "collectionName": "subscription_plans",
  "info": {
    "singularName": "subscription-plan",
    "pluralName": "subscription-plans",
    "displayName": "Subscription Plan",
    "description": "Subscription plans for posting advertisements"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "duration": {
      "type": "enumeration",
      "enum": ["weekly", "monthly", "yearly"],
      "required": true
    },
    "postLimit": {
      "type": "integer",
      "required": true,
      "min": 1
    },
    "price": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "isActive": {
      "type": "boolean",
      "default": true
    },
    "features": {
      "type": "json"
    },
    "sortOrder": {
      "type": "integer",
      "default": 0
    },
    "paymentRequests": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::payment-request.payment-request",
      "mappedBy": "subscriptionPlan"
    },
    "userSubscriptions": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::user-subscription.user-subscription",
      "mappedBy": "subscriptionPlan"
    }
  }
}

